body{font-family:"Inter",sans-serif;line-height:1.6;color:#2C2C2C;background-color:#FDFBF7}h1,h2,h3,h4,h5,h6{font-family:"Playfair Display",serif;font-weight:700;line-height:1.2;color:#1A4D2E;margin-bottom:1rem}h1{font-size:3rem}h2{font-size:2.25rem}h3{font-size:1.75rem}p{margin-bottom:1rem}*,*::before,*::after{box-sizing:border-box;margin:0;padding:0}img{max-width:100%;height:auto;display:block}a{color:inherit;text-decoration:none;transition:color 0.2s ease}a:hover{color:#1A4D2E}.container{max-width:1200px;margin:0 auto;padding:0 1.5rem}.btn{display:inline-block;padding:0.75rem 1.5rem;background-color:#1A4D2E;color:white;border-radius:4px;font-family:"Inter",sans-serif;font-weight:500}.btn:hover{background-color:#143a23}.btn--outline{background-color:transparent;border:1px solid #1A4D2E;color:#1A4D2E}.btn--outline:hover{background-color:#1A4D2E;color:white}
